{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "outDir": "build",
    "lib": [
      "esnext"
    ],
  },
  "exclude": [
    "node_modules",
    "build",
  ]
}
